
<section>
    
    <div class="container-fluid">
        <div class="row m-4">

            {{#each products}}

                <div class="col-md-3">
                    <div class="card" style="width: 18rem;">
                        <img src="/product-images/{{this._id}}.jpg" style="width: 250px; height: 370px;" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary">Add to cart</a>
                        </div>
                    </div>
                </div>

            {{/each}}



        </div>
    </div>

</section>