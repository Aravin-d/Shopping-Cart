<section>
    <div class="container-fluid">

        <div class="mt-3" style="display: flex; justify-content: end;"> 
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>


        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">NO</th>
                    <th scope="col">NAME</th>
                    <th scope="col">CATEGORY</th>
                    <th scope="col">DESCRIPTION</th>
                    <th scope="col">IMAGE</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}

                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img src="/public/product-images/{{this._id}}.jpg" alt="" style="width: 50px; height: 75px;"></td>
                </tr>

                {{/each}}
            </tbody>
        </table>
    </div>
</section>